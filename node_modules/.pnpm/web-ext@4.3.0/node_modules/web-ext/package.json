{
  "name": "web-ext",
  "version": "4.3.0",
  "description": "A command line tool to help build, run, and test web extensions",
  "main": "dist/web-ext.js",
  "files": [
    "CODE_OF_CONDUCT.md",
    "dist/*.js",
    "src/**"
  ],
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=5.6.0"
  },
  "engine-strict": true,
  "bin": {
    "web-ext": "bin/web-ext"
  },
  "scripts": {
    "build": "node scripts/build",
    "start": "node scripts/develop",
    "test": "node scripts/test",
    "test-coverage": "node scripts/test --coverage",
    "test-functional": "node scripts/test-functional",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls",
    "audit-deps": "node ./scripts/audit-deps",
    "changelog": "npx conventional-changelog-cli -p angular -u",
    "changelog-lint": "commitlint --from master",
    "changelog-lint-from-stdin": "commitlint",
    "travis-pr-title-lint": "node ./scripts/travis-pr-title-lint",
    "gen-contributing-toc": "doctoc CONTRIBUTING.md"
  },
  "homepage": "https://github.com/mozilla/web-ext",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/web-ext.git"
  },
  "bugs": {
    "url": "http://github.com/mozilla/web-ext/issues"
  },
  "keywords": [
    "web",
    "extensions",
    "web extensions",
    "browser extensions",
    "firefox",
    "mozilla",
    "add-ons",
    "google",
    "chrome",
    "opera"
  ],
  "dependencies": {
    "@babel/polyfill": "7.7.0",
    "@babel/runtime": "7.7.7",
    "@cliqz-oss/firefox-client": "0.3.1",
    "@cliqz-oss/node-firefox-connect": "1.2.1",
    "adbkit": "2.11.1",
    "addons-linter": "1.26.0",
    "bunyan": "1.8.12",
    "camelcase": "5.3.1",
    "chrome-launcher": "0.13.3",
    "debounce": "1.2.0",
    "decamelize": "3.2.0",
    "es6-error": "4.1.1",
    "event-to-promise": "0.8.0",
    "firefox-profile": "1.3.1",
    "fx-runner": "1.0.12",
    "git-rev-sync": "2.0.0",
    "import-fresh": "3.2.1",
    "mkdirp": "1.0.4",
    "multimatch": "4.0.0",
    "mz": "2.7.0",
    "node-notifier": "6.0.0",
    "open": "7.0.0",
    "parse-json": "5.0.0",
    "sign-addon": "2.0.5",
    "source-map-support": "0.5.19",
    "stream-to-promise": "2.2.0",
    "strip-bom": "4.0.0",
    "strip-json-comments": "3.0.1",
    "tmp": "0.1.0",
    "update-notifier": "4.0.0",
    "watchpack": "1.6.1",
    "ws": "7.2.3",
    "yargs": "15.3.1",
    "zip-dir": "1.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-transform-runtime": "7.7.6",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-flow": "7.7.4",
    "@babel/register": "7.7.7",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "babel-plugin-istanbul": "6.0.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "copy-dir": "1.3.0",
    "coveralls": "3.1.0",
    "cross-env": "7.0.2",
    "deepcopy": "2.0.0",
    "doctoc": "1.4.0",
    "eslint": "7.3.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-flowtype": "5.1.3",
    "eslint-plugin-import": "2.21.2",
    "flow-bin": "0.110.1",
    "html-entities": "1.3.1",
    "mocha": "8.0.1",
    "nyc": "15.1.0",
    "prettyjson": "1.2.1",
    "shelljs": "0.8.4",
    "sinon": "9.0.2",
    "webpack": "4.43.0",
    "webpack-node-externals": "1.7.2",
    "yauzl": "2.10.0"
  },
  "author": "Kumar McMillan",
  "license": "MPL-2.0",
  "nyc": {
    "include": "src/**/*.js",
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
