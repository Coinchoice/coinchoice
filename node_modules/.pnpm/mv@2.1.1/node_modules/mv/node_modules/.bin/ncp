#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../ncp@2.0.0/node_modules/ncp/bin/ncp" "$@"
else
  exec node  "$basedir/../../../../../ncp@2.0.0/node_modules/ncp/bin/ncp" "$@"
fi
