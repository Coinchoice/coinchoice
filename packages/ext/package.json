{
	"name": "@coinchoice/ext",
	"version": "0.0.1",
	"description": "Shop reward stores without loyalty points at great discounts",
	"license": "UNLICENSED",
	"scripts": {
		"start": "web-ext run --target=chromium --source-dir ./dist/chrome",
		"start:firefox": "web-ext run --source-dir ./dist/firefox",
		"dev": "vite",
		"build": "tsc && vite build --outDir build",
		"version": "dot-json build/manifest.json version $VER",
		"release:cws": "webstore upload --source=dist/chrome --auto-publish --extension-id $CWS_EXTENSION_ID --client-id $CWS_CLIENT_ID --client-secret $CWS_CLIENT_SECRET --refresh-token $CWS_REFRESH_TOKEN",
		"release:amo": "web-ext-submit --source-dir dist/firefox",
		"release": "VER=$(daily-version) run-s build version release:*",
		"lint": "run-p lint:*",
		"lint:js": "eslint -c ./.eslintrc.js \"./**/*.{js,jsx,ts,tsx,mjs}\"",
		"lint:css": "stylelint \"./**/*.{js,jsx,ts,tsx}\"",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"format": "prettier --write \"./**/*.{js,jsx,mjs,ts,tsx,json,css,scss,md}\" --ignore-path ../../.prettierignore --config ../../.prettierrc",
		"clean": "del-cli './distribution' './dist' './build' './packages' './test/web-ext-profile/*' '!./test/web-ext-profile/.gitkeep'",
		"test": "run-s lint:*"
	},
	"dependencies": {
		"@emotion/react": "^11.10.6",
		"@extend-chrome/messages": "^1.2.2",
		"@extend-chrome/storage": "^1.5.0",
		"@jsdevtools/ono": "^7.1.3",
		"@mantine/core": "^5.10.4",
		"@mantine/hooks": "^5.10.4",
		"@sentry/browser": "^5.30.0",
		"@types/react-dom": "^18.0.11",
		"ethers": "^5.7.2",
		"lodash.snakecase": "^4.1.1",
		"react": "^16.14.0",
		"react-dom": "^16.14.0",
		"tslog": "^4.7.5",
		"webextension-polyfill": "^0.6.0"
	},
	"devDependencies": {
		"@babel/core": "^7.21.0",
		"@babel/eslint-parser": "^7.19.1",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.21.0",
		"@crxjs/vite-plugin": "2.0.0-beta.13",
		"@emotion/babel-plugin": "^11.10.6",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"@types/react": "^18.0.28",
		"@types/webextension-polyfill": "^0.10.0",
		"chrome-webstore-upload-cli": "^1.2.2",
		"cross-env": "^7.0.3",
		"daily-version": "^2.0.0",
		"del-cli": "^3.0.1",
		"dot-json": "^1.2.2",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"plugin-react": "link:@vitejs@/plugin-react",
		"prettier": "^2.8.4",
		"stylelint": "^13.13.1",
		"stylelint-config-xo": "^0.19.0",
		"vite": "^3",
		"web-ext": "^4.3.0",
		"web-ext-submit": "^4.3.0"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"keepProfileChanges": true,
			"firefoxProfile": "./test/web-ext-profile",
			"chromiumProfile": "./test/web-ext-profile"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./**/*.{js,jsx,ts,tsx}": [
			"yarn lint:js -- --fix",
			"yarn lint:css"
		],
		"./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"yarn format"
		]
	}
}
